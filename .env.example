# Server-side secrets

# Token to authorize on-demand ISR revalidation
REVALIDATE_TOKEN=change_me_long_random

# Google Sheets (service account with view permission to the spreadsheet)
SHEETS_SPREADSHEET_ID=
SHEETS_SERVICE_ACCOUNT_EMAIL=

# Use ONE of the following for the private key
# Raw multi-line private key (including BEGIN/END and line breaks)
# Example:
# SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n"
SHEETS_PRIVATE_KEY=

# Or, base64-encoded private key (single line)
SHEETS_PRIVATE_KEY_BASE64=

# Optional: override ranges if your sheet structure differs
# Defaults:
#   SCHEDULE_RANGE=Schedule!A2:N
#   PLAYERS_RANGE=players!A2:E
#   GUEST_RANGE=guestMembers!A2:E
#   STAFF_RANGE=staff!A2:D
SCHEDULE_RANGE=
PLAYERS_RANGE=
GUEST_RANGE=
STAFF_RANGE=

# Admin/Audit (optional)
# Expose admin audit page only when explicitly enabled
NEXT_PUBLIC_ENABLE_AUDIT_PAGE=false
# Token to read audit logs via /api/audit-log (GET)
AUDIT_ADMIN_TOKEN=

